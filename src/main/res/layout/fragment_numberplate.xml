        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/picker1"
            android:layout_below="@+id/gaadiNumber"
            ></NumberPicker>
        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/picker2"
            android:layout_toRightOf="@+id/picker1"
            android:layout_below="@+id/gaadiNumber"
            ></NumberPicker>
        <NumberPicker
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/picker3"
            android:layout_toRightOf="@+id/picker2"
            android:layout_below="@+id/gaadiNumber"
            ></NumberPicker>
        <NumberPicker
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/picker4"
            android:layout_toRightOf="@+id/picker3"
            android:layout_below="@+id/gaadiNumber">
         </NumberPicker>



        <NumberPicker
            android:layout_marginLeft="20dp"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/digit1"
            android:layout_toRightOf="@+id/picker4"
            android:layout_below="@+id/gaadiNumber"
            ></NumberPicker>
        <NumberPicker
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/digit2"
            android:layout_toRightOf="@+id/digit1"
            android:layout_below="@+id/gaadiNumber">
        </NumberPicker>
        <NumberPicker
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/digit3"
            android:layout_toRightOf="@+id/digit2"
            android:layout_below="@+id/gaadiNumber"
            ></NumberPicker>
        <NumberPicker
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/digit4"
